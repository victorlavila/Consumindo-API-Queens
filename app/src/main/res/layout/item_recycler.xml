<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="170dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="10dp"
    android:layout_marginStart="20dp"
    android:layout_marginTop="10dp"
    android:backgroundTint="@color/cardview_dark_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_queen"
            android:layout_width="match_parent"
            android:layout_height="120dp"/>

        <TextView
            android:id="@+id/id_queen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Id: 01"
            android:textSize="08sp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/name_queen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Name: Victoria 'Porkchop' Parker"
            android:textSize="08sp"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="6dp"/>

        <TextView
            android:id="@+id/information_queen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Click aqui para mais informações"
            android:gravity="center"
            android:textSize="08sp"
            android:fontFamily="serif-monospace"
            android:background="@color/black"
            android:textColor="@color/white"/>


    </LinearLayout>

</androidx.cardview.widget.CardView>